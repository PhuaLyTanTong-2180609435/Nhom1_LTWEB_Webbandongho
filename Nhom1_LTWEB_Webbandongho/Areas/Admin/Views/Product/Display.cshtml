@model Nhom1_LTWEB_Webbandongho.Models.Product
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h2>@Model.Name</h2>
            <div>
                <h3>Price: @Model.Price.ToString("#,##0") Vnđ</h3>
                <p>Description: @Model.Description</p>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid" alt="Product Image" style="max-width: 100%;" />
                }
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-8">
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
